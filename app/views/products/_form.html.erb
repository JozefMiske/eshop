<%= form_with(model: product, class: 'box') do |form| %>

  <%# FORM ERRORS %>
  <%= render 'partials/form_errors', record: product %>


  <%# TITLE %>
  <div class="field">
    <%= form.label :title, class: 'label' %>
    
    <p class="control">
      <%= form.text_field :title, placeholder: 'Product name', class: 'input' %>
    </p>
  </div>


  <%# DESCRIPTION %>
  <div class="field">
    <%= form.label :description, class: 'label' %>
    
    <div class="control">
      <%= form.rich_text_area :description %>
    </div>
  </div>


  <%# PRICE %>
  <div class="field">
    <%= form.label :price, class: 'label' %>
    
    <p class="control">
      <%= form.text_field :price, placeholder: '', class: 'input' %>
    </p>
  </div>


  <%# UPLOAD IMAGE %>
  <div class="file has-name">
  <label class="file-label">
    <input class="file-input" type="file" name="resume">
    <span class="file-cta">
      <span class="file-icon">
      &#9167;
        <i class="fas fa-upload"></i>
      </span>
      <span class="file-label">
        Choose a file…
      </span>
    </span>
    <span class="file-name">
      Doplniť
    </span>
  </label>
</div>


  <%# SUBMIT & CANCEL BUTTONS %>
  <div class="field is-grouped">
    <div class="control">
      <%= form.submit class: 'button is-link' %>
    </div>

    <div class="control">
      <%= link_to "Cancel", products_path, class: 'button' %> 
    </div>
  </div>

<% end %>
